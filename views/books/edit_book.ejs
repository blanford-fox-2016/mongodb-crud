<!DOCTYPE html>
<html>

<% include ../head.ejs %>

<body>


<div class="container">
    <h1 class="text-center"><%= title %></h1>

    <form class="form-horizontal" method="post" action="/books/update">
        <div class="form-group">
            <label class="control-label col-sm-2">ISBN:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="isbn" value="<%= books.isbn%>">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Title:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="title" value="<%= books.title%>">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Author:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="author" value="<%= books.author%>">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Category:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="category" value="<%= books.category%>">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Stock:</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" name="stock" value="<%= books.stock%>">
            </div>
        </div>

        <input type="hidden" name="id" value="<%= books._id%>">

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>
    </form>
</div>



<% include ../scripts.ejs %>

</body>
</html>
