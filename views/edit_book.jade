extends layout

block content
  .row
    .container
      .jumbotron.text-center
        h1 Edit New Book
      
      form(action='/book' method='post')
        .form-group
          label.control-label(for='ISBN') ISBN
          input#ISBN.form-control(type='text', name='isbn' value='')
        .form-group
          label.control-label(for='title') Title
          input#title.form-control(type='text', name='title' value='')
        .form-group
          label.control-label(for='author') Author
          input#author.form-control(type='text', name='author' value='')
        .form-group
          label.control-label(for='category') Category
          input#category.form-control(type='text', name='category' value='')
        .form-group
          label.control-label(for='stock') Stock
          input#stock.form-control(type='number', name='stock' value='')
            
        .form-group
          button.btn.btn-primary(type="submit") Submit
        
