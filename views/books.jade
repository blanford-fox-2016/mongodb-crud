extends layout

block content
  .row
    .container
      .jumbotron.text-center
        h1 Books Management
  .row
    .container
      table.table.table-striped.table-hover
        thead
          tr
            th #
            th ISBN
            th Title
            th Author
            th Category
            th Stock
        tbody
          - for(var i = 0 ; i < books.length ; i++)
            tr
              td #{i+1}
              td #{books[i].isbn}
              td #{books[i].title}
              td #{books[i].author}
              td #{books[i].category}
              td #{books[i].stock}
