extends layout

block content
  .row
    .container
      .jumbotron.text-center
        h1 Edit Customer
      
      form(action='/customer' method='post')
        .form-group
          label.control-label(for='name') Name
          input#name.form-control(type='text', name='name' value='')
        .form-group
          label.control-label(for='member_id') Member_ID
          input#member_id.form-control(type='text', name='member_id' value='')
        .form-group
          label.control-label(for='address') Address
          input#address.form-control(type='text', name='address' value='')
        .form-group
          label.control-label(for='phone') Phone
          input#phone.form-control(type='text', name='phone' value='')
            
        .form-group
          button.btn.btn-primary(type="submit") Submit
        
