<!DOCTYPE html>
<html>

<% include ../head.ejs %>

<body>


<div class="container">
    <h1 class="text-center"><%= title %></h1>

    <form class="form-horizontal" method="post" action="/books/update">
        <div class="form-group">
            <label class="control-label col-sm-2">Name:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="name" value="<%= customers.name%>">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Member Id:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="title" value="<%= books.title%>">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Address:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="address" value="<%= customers.address%>">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Zipcode:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="zipcode" value="<%= customers.zipcode%>">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Phone:</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" name="stock" value="<%= customers.phone%>">
            </div>
        </div>

        <input type="hidden" name="id" value="<%= books._id%>">

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>
    </form>
</div>



<% include ../scripts.ejs %>

</body>
</html>
